<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financetracker.controller.BudgetController"
      spacing="20" styleClass="main-content">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Budget Management" styleClass="page-title">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
            <Label text="Set spending limits and track your progress" styleClass="subtitle">
                <font><Font size="13"/></font>
            </Label>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Add Budget" onAction="#handleAddBudget" styleClass="primary-button" prefHeight="40">
            <font><Font size="14"/></font>
        </Button>
    </HBox>

    <!-- Summary Cards -->
    <HBox spacing="20">
        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Total Budget Limit" styleClass="card-title">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="totalBudgetLabel" text="\$0.00" styleClass="card-value">
                <font><Font size="28" name="System Bold"/></font>
            </Label>

        </VBox>

        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Active Budgets" styleClass="card-title">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="activeBudgetsLabel" text="0" styleClass="income-value">
                <font><Font size="28" name="System Bold"/></font>
            </Label>
        </VBox>

        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Needs Attention" styleClass="card-title">
                <font><Font size="13"/></font>
            </Label>
            <Label fx:id="warningBudgetsLabel" text="0" styleClass="expense-value">
                <font><Font size="28" name="System Bold"/></font>
            </Label>
        </VBox>
    </HBox>

    <!-- Filters Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="filter-section">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <Label text="Show:">
            <font><Font size="13"/></font>
        </Label>
        <ComboBox fx:id="filterComboBox" prefWidth="150"/>

        <Region HBox.hgrow="ALWAYS"/>

        <TextField fx:id="searchField" promptText="Search by name or category..." prefWidth="220"/>

        <Button text="Refresh" onAction="#handleRefresh" styleClass="secondary-button"/>
    </HBox>

    <!-- Budget Table -->
    <VBox VBox.vgrow="ALWAYS" styleClass="content-section">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <TableView fx:id="budgetTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Budget Name" prefWidth="150"/>
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="120"/>
                <TableColumn fx:id="limitColumn" text="Limit" prefWidth="100"/>
                <TableColumn fx:id="spentColumn" text="Spent" prefWidth="100"/>
                <TableColumn fx:id="remainingColumn" text="Remaining" prefWidth="100"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                <TableColumn fx:id="periodColumn" text="Period" prefWidth="90"/>
            </columns>
            <placeholder>
                <Label text="No budgets found. Click '+ Add Budget' to create your first budget."/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Edit Selected" onAction="#handleEditBudget" styleClass="secondary-button"/>
        <Button text="Delete Selected" onAction="#handleDeleteBudget" styleClass="danger-button"/>
    </HBox>
</VBox>